//- State header
mixin state(state, img, nickname, date, border)
  header.state
    .flex
      h1= state
      .flag
        img(src='/assets/images/flag-' + img + '.svg',
            alt='flag of ' + state,
            class=border)
    .meta
      .nickname= nickname
      .date Admitted 
        span= date

//- Territory header
mixin territory(territory, img, date, border)
  header.territory
    .flex
      h1= territory
      .flag
        img(src='/assets/images/flag-' + img + '.svg',
        alt='flag of ' + territory,
        class=border)
    .meta
      .date U.S. territory since 
        span= date

//- Flag image
mixin flag(state, img, border)
  img(src='/assets/images/flag-' + img + '.svg',
      alt='flag of ' + state,
      class=border)

//- Flag as a list item + a link to the page
mixin flag-item(state, link, img, alt, border)
  li.flag-item(class=link)
    a(href='/' + link)
      span.flag
        img(src='/assets/images/flag-' + img,
            alt=alt,
            class=border)
      span.state= state

//- NAVA survey callout
mixin survey(state, rank, asterisk)
  .nava-survey
    p In the #[a(href='https://nava.org/digital-library/raven/Raven_v08_2001_p011-038.pdf') 2001 North American Vexillological Association (NAVA) flag survey] of United States and Canada flags, the flag of #[strong= state] was ranked #[strong= rank] out of 72.
      span.asterisk= asterisk

//- Coat of arms
mixin coat-of-arms(state, img)
  img(src='/assets/images/coat-of-arms-' + img + '.jpg', alt='the ' + state + ' coat of arms')

//- Construction sheet
mixin construction(state,img)
  img(src='/assets/images/flag-' + img +'-dimensions.svg', alt='construction sheet for the flag of ' + state)

//- Previous/next links
mixin pagination(prevURL, prevName, nextURL, nextName)
  nav.pagination
    a.previous(href='/' + prevURL)= prevName
    a.next(href='/' + nextURL)= nextName
