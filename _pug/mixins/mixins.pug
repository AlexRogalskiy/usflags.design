mixin state(state,img,nickname,date,border)
  header.state
    .flex
      h1= state
      .flag
        img(src=img, alt=state + ' state flag', class=border)
    .meta
      .nickname= nickname
      .date Admitted 
        span= date

mixin territory(territory,img,date,border)
  header.territory
    .flex
      h1= territory
      .flag
        img(src=img, alt=territory + ' flag', class=border)
    .meta
      .date U.S. territory since 
        span= date

mixin flag(state, link, img, border)
  li.flag-item(class=link)
    a(href='/' + link)
      span.flag: img(src=img, alt=state + ' state flag', class=border)
      span.state= state

mixin survey(state, rank, asterisk)
  .nava-survey
    p In the #[a(href='https://nava.org/digital-library/raven/Raven_v08_2001_p011-038.pdf') 2001 North American Vexillological Association (NAVA) flag survey] of United States and Canada flags, the flag of #[strong= state] was ranked #[strong= rank] out of 72.
      span.asterisk= asterisk
