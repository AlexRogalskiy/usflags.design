      .color
        .sample(class='us-blue')
        .name Blue
        .hex #002868
        small PMS 282
      .color
        .sample(class='us-red')
        .name Red
        .hex #bg0a30
        small PMS 193
      .color
        .sample(class='white')
        .name White
        .hex #ffffff
