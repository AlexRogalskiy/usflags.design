extends layout

block vars
  - var bodyClass = 'detail'
  - var category = 'state'
  - var name = 'New Jersey'
  - var path = 'new-jersey'

block content

  +state(name, path, 'The Garden State', 'December 18, 1787')

  .intro
    p New Jersey became the third state to ratify the U.S. Constitution, named in honor of England’s Isle of Jersey.
    p Its flag is the only U.S. flag to feature a field of buff, often incorrectly represented as yellow. It’s one of many to showcase its state coat of arms.
    p The flag was officially adopted March 26, 1896.

  .guide
    .content
      h2 Composition
      p The New Jersey flag features a field of buff charged with the state coat of arms, centered.
      +survey(name, '46th')
    .visual.flag
      +flag(name, path)

  .guide.wide
    .content
      h2 Iconography
      ul.visual.icon-list
        li.icon-item
          span.icon: img(src='/assets/images/flag-new-jersey-icon-liberty.svg', alt='the goddess Liberty holding a staff topped with a phrygian cap')
          h4 Liberty
          p goddess of liberty, freedom
        li.icon-item
          span.icon: img(src='/assets/images/flag-new-jersey-icon-ceres.svg', alt='the goddess Ceres holding a cornucopia')
          h4 Ceres
          p goddess of agriculture, prosperity
        li.icon-item
          span.icon: img(src='/assets/images/flag-new-jersey-icon-cap.svg', alt='a phrygian cap')
          h4 phrygian cap
          p liberty, freedom
        li.icon-item
          span.icon: img(src='/assets/images/flag-new-jersey-icon-cornucopia.svg', alt='a cornucopia filled with fruits')
          h4 cornucopia
          p agriculture, bountiful harvest
        li.icon-item
          span.icon: img(src='/assets/images/flag-new-jersey-icon-horse.svg', alt='a left-facing horse’s head')
