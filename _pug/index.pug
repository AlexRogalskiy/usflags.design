extends layout

block vars
  - var pageDescription = ''
  - var bodyClass = 'home'

block tweet
  a.tweet(href="https://ctt.ec/DidfP") Share on Twitter

block content

  header
    .flex
      h1 US Flags
      .flag
        img(src='/assets/images/flag-arizona.svg')
    .meta
      .description A design guide for the flags of the United States

  ul.flag-list
    +flag('Delaware', 'delaware', '/assets/images/flag-delaware.svg')
    +flag('Pennsylvania', 'pennsylvania', '/assets/images/flag-pennsylvania.svg')
    +flag('New Jersey', 'new-jersey', '/assets/images/flag-new-jersey.svg')
    +flag('Georgia', 'georgia', '/assets/images/flag-georgia.svg')
    +flag('Connectict', 'connecticut', '/assets/images/flag-connecticut-thumb.svg')
    +flag('Massachusetts', 'massachusetts', '/assets/images/flag-massachusetts-thumb.svg', 'border')
    +flag('Maryland', 'maryland', '/assets/images/flag-maryland.svg')
    +flag('South Carolina', 'south-carolina', '/assets/images/flag-south-carolina.svg')
    +flag('New Hampshire', 'new-hampshire', '/assets/images/flag-new-hampshire.svg')
    +flag('Virginia', 'virginia', '/assets/images/flag-virginia-thumb.svg')
    +flag('New York', 'new-york', '/assets/images/flag-new-york-thumb.svg')
    +flag('North Carolina', 'north-carolina', '/assets/images/flag-north-carolina.svg', 'border')
    +flag('Rhode Island', 'rhode-island', '/assets/images/flag-rhode-island-thumb.svg', 'border')
    +flag('Vermont', 'vermont', '/assets/images/flag-vermont-thumb.jpg')
    +flag('Arizona', 'arizona', '/assets/images/flag-arizona.svg')
    +flag('Arizona', 'arizona', '/assets/images/flag-arizona.svg')
