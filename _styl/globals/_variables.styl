/*--------------------------------------------------------------------
* $VARIABLES
--------------------------------------------------------------------*/

// Font Families
$font-family-study = 'study', Helvetica, Arial, sans-serif
$font-family-proxima = 'proxima-nova', Verdana, sans-serif 

// Font Weights
$font-weight-light = 300
$font-weight-normal = 400
$font-weight-bold = 600
$font-weight-extra-bold = 800

// Mixins

b(val) //b for bracket
  unquote("[") + val + unquote("]")

// Colors

white(alpha)
  rgba(255,255,255,alpha)

black(alpha)
  rgba(0,0,0,alpha)

$grey-drk = #444
$grey-med = #888
$grey-light = #ccc
$grey-lightest = #ddd
