/*--------------------------------------------------------------------
* $VARIABLES
--------------------------------------------------------------------*/

// Font Families
$font-family-study = 'study', Helvetica, Arial, sans-serif
$font-family-proxima = 'proxima-nova', Verdana, sans-serif 

// Font Weights
$font-weight-light = 300
$font-weight-normal = 400
$font-weight-bold = 600
$font-weight-extra-bold = 800

// Mixins

b(val) //b for bracket
  unquote("[") + val + unquote("]")

// Colors

white(alpha)
  rgba(255,255,255,alpha)

black(alpha)
  rgba(0,0,0,alpha)

$grey-drk = #444
$grey-med = #888
$grey-light = #ccc
$grey-lightest = #ddd

// Breakpoints

$w-small = 300px
$w-medium = 600px
$w-large = 900px
$w-huge = 1150px

$bp-small = 'screen and (min-width: $w-small) and (max-width: $w-medium - 1)'
$bp-medium = 'screen and (min-width: $w-medium) and (max-width: $w-large - 1)'
$bp-large = 'screen and (min-width: $w-large) and (max-width: $w-huge - 1)'
$bp-huge = 'screen and (min-width: $w-huge)'
