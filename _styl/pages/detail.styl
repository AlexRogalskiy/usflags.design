/*--------------------------------------------------------------------
* $DETAIL VIEW
--------------------------------------------------------------------*/

.intro
  margin-bottom: 100px
  padding-bottom: 60px
  border-bottom: 1px dashed $grey-med
  font-size: 1.8em

  p
    max-width: 700px
    margin-bottom: 30px

.guide
  margin-bottom: 120px

  &:not(.wide)
    display: flex
    justify-content: space-between

    .content
      width: 400px
      margin-right: 30px

    .visual
      width: 50%

  &.timeline .content > p
    max-width: 400px

  h2:not(:first-of-type)
    margin-top: 50px

  img + img
    margin-top: 15px

  &.sources
    margin-bottom: 40px
    border-top: 1px dashed $grey-med
    padding-top: 50px

    li
      margin-bottom: 10px
      font-size: .9em

      a:after
        content: 'â†—'
        display: inline-block
        margin-left: 5px
        font-size: 12px
        color: $grey-med

.colors
  width: 100%
  display: grid
  grid-gap: 10px

  &.primary
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr))

    .sample
      height: 100px

  &.secondary
    grid-template-columns: repeat(auto-fit, minmax(80px, 1fr))
    font-size: .85em

    .sample
      height: 50px

  & + .colors
    margin-top: 30px

  .sample
    width: 100%
    margin-bottom: 7px
    border-radius: 4px

  .name
    font-weight: $font-weight-bold
    text-transform: capitalize

  .hex
    font-size: .9em

  small
    margin-top: 5px
    display: block
    line-height: 1.2
