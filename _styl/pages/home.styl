/*--------------------------------------------------------------------
* $HOME
--------------------------------------------------------------------*/

.home

  h1
    position: relative

    span
      display: block
      position: absolute
      font-size: .15em
      font-style: italic
      font-weight: $font-weight-normal

      @media $bp-small
        bottom: 6px
        right: -49px

      @media $bp-medium
        bottom: -6px
        right: -22px

      @media $bp-large
        bottom: -10px
        right: -33px

      @media $bp-huge
        bottom: -10px
        right: -50px
