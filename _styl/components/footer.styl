/*--------------------------------------------------------------------
* $FOOTER
--------------------------------------------------------------------*/

.footer-main
  margin-top: 100px
  font-family: $font-family-study
  font-style: italic
  font-size: .9em

  clear: both

  display: flex
  justify-content: space-between
  align-items: center

  p
    margin-bottom: 0

  span
    font-style: normal

  .coffee
    transition: transform 300ms ease-in-out
    background: none
    box-shadow: none

    img
      max-height: 30px

    &:hover
      transform: scale(1.2)
