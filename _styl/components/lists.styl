.flag-list,
.icon-list
  display: grid

  a
    display: block
    text-decoration: none

  p a
    text-decoration: underline

  @media screen and (max-width: 606px)
    .flag-item:empty,
    .icon-item:empty
      display: none

p + .icon-list,
p + .flag-list
  margin-top: 30px

.flag-list
  grid-template-columns: repeat(auto-fit, minmax(230px, 1fr))
  grid-gap: 40px

  .state
    font-family: $font-family-study
    font-style: italic
    font-weight: $font-weight-light

.detail .flag-list p
  margin-top: 5px
  font-size: .9em

.icon-list
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr))
  grid-gap: 40px 80px

  h4
    margin-bottom: 5px
    font-size: 1em

  p
    font-size: .8em

    &:not(:last-child)
      margin-bottom: 15px

    &:first-of-type:before
      content: 'Denotes'
      display: block
      margin-bottom: 5px
      padding-top: 10px
      border-top: 1px dotted $grey-light
      font-size: .7em
      color: $grey-med
      text-transform: uppercase
      letter-spacing: 1px

  .icon img
    width: auto
    height: 150px

h2 + .flag-list,
h2 + .icon-list
  margin-top: 30px
