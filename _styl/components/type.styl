/*--------------------------------------------------------------------
* $TYPE
--------------------------------------------------------------------*/

h1
  font-family: $font-family-study
  font-weight: $font-weight-extra-bold

h2, h3
  font-family: $font-family-proxima
  font-weight: $font-weight-bold

h2
  margin-bottom: 10px
  line-height: 1.3
  font-size: 1.33em

h3
  margin-bottom: 10px
  font-size: 1.12em

p
  margin-bottom: 20px

em
  font-style: italic

a
  color: black

strong
  font-weight: $font-weight-bold

small
  font-size: 80%
  color: $grey-med

hr
  height: 1px
  margin: 10px 0 40px
  border-top: 1px dotted $grey-med
