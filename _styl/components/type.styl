/*--------------------------------------------------------------------
* $TYPE
--------------------------------------------------------------------*/

h1
  font-family: $font-family-study
  font-weight: $font-weight-extra-bold

h2, h3, h4
  font-family: $font-family-proxima
  font-weight: $font-weight-bold

h2
  margin-bottom: 10px
  line-height: 1.3
  font-size: 1.33em

h3
  margin-bottom: 10px
  font-size: 1.12em

h4
  font-size: 1em

p:not(:last-child)
  margin-bottom: 20px

em
  font-style: italic

a
  color: black

strong
  font-weight: $font-weight-bold

small
  margin-bottom: 10px
  display: block
  font-size: 80%
  color: $grey-med

hr
  height: 1px
  margin: 30px 0 20px
  border-top: 1px dotted $grey-light
  border-bottom: 0

  &.narrow
    max-width: 400px
    margin: 20px 0

figcaption
  margin-bottom: 20px
  text-align: right
  font-size: .7em
  font-style: italic
  color: $grey-med

ul.bullets
  margin-left: 20px
  list-style-type: disc
